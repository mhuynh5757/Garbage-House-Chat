doctype html
html(ng-app="chatApp")
  head
    title Chat
    link(rel='stylesheet', href='/stylesheets/normalize.css')
    link(rel='stylesheet', href='/stylesheets/font-awesome.min.css')
    link(rel='stylesheet', href='/stylesheets/client.css')
    link(href="https://fonts.googleapis.com/css?family=Open+Sans:300,400", rel="stylesheet")

    script(src='/javascripts/jquery.min.js')
    script(src='/javascripts/angular.min.js')
    script(src='/javascripts/angular-ui-router.min.js')
    script(src='/javascripts/angular-animate.min.js')
    
    script(src="/socket.io/socket.io.js")
    script(src='/javascripts/client.js')
    base(href="/")
  body
    div(ng-controller="headerController" class="header hbox")
      div(class="left") Garbage House Chat
      div(ng-show="loggedIn" class="right")
        div(class="loggedInAs")
          label(for="settingsToggle" class="settingsToggle")
            i(class="settingsCog fa fa-cog", ng-class="{active: showSettings}")
          input(id="settingsToggle", class="settingsCheckbox", type="checkbox", ng-model="showSettings", ng-change="toggleSettings()")
          i(class="fa fa-user username")
          | {{current_nickname}} 
          a(ng-click="logout()" class="logout")
            i(class="fa fa-sign-out")
    div(class="ui-view-wrapper" ui-view)
