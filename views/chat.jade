div(class="content hbox")
  div(class="userlist vbox")
    p(class="userlist-header") Users
    div(class="userlist-content")
      ul
        li(ng-repeat="usr in users track by $index") {{usr}}
  div(class="chatlog vbox")
    p(class="chatlog-header") Messages
    div(autoscroll, class="chatlog-content", id="chatlog")
      ul
        li(ng-repeat="msg in messages track by $index")
          small {{msg.timestamp}} 
          |&nbsp;{{msg.message}}
    div(class="chatlog-footer")
      form(ng-submit="message()" class="hbox input")
        input(type="text", autocomplete="off", ng-model="message_to_send", class="form-textbox", id="text_to_send", autofocus)
        input(type="submit", value="Send", class="form-button")
  div(id="settings-overlay", ng-class="{display: showSettings}")
    div(class="container vbox")
      div(class="settings-header") Settings
      div(class="settings-content")
        div(class="nickname") Nickname
          form(ng-submit="setNickname()" class="hbox input")
            input(type="text", autocomplete="off", class="form-textbox")
            input(type="submit", value="Set", class="form-button")
  div(id="dim-overlay", ng-click="toggleSettings()", ng-class="{display: showSettings}")
