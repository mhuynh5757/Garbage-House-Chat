p
  small Your Username: 
  | !{username}
ul Users
  li(ng-repeat="usr in users track by $index") {{usr}}
ul Messages
  li(ng-repeat="msg in messages track by $index") {{msg}}
form(ng-submit="message()")
  input(type="text", ng-model="message_to_send")
  input(type="submit", value="Send")
form(name="logout", action="/logout", method="get")
  input(type="submit", value="Logout")
